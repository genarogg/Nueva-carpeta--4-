---
import "@assets/vendor/bootstrap/css/bootstrap.min.css";
import "@assets/vendor/bootstrap-icons/bootstrap-icons.min.css";
import "@assets/vendor/boxicons/css/boxicons.min.css"
import "@assets/vendor/quill/quill.snow.css";
import "@assets/vendor/quill/quill.bubble.css";
import "@assets/vendor/remixicon/remixicon.css";
import "@assets/vendor/simple-datatables/style.css"

import "@assets/css/style.css";

import "@assets/js/myjs.js"

interface Props {
  title: string;
}

const { title } = Astro.props;


---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
  
    <title>{title}</title>
    <meta content="" name="description">
    <meta content="" name="keywords">
  
    <!-- Favicons -->
    <link href="/img/favicon.png" rel="icon">
    <link href="/img/apple-touch-icon.png" rel="apple-touch-icon">
  
    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">


    <title>{title}</title>
</head>
<body>
    <slot />
    
    <!-- Vendor JS Files -->
    <script src="/assets/vendor/apexcharts/apexcharts.min.js" client:load></script>
    <script src="/assets/vendor/bootstrap/js/bootstrap.bundle.min.js" client:load></script>
    <script src="/assets/vendor/chartjs/chart.umd.js" client:load></script>

    <script src="/assets/vendor/echarts/echarts.min.js" client:load></script>
    <script src="/assets/vendor/quill/quill.min.js" client:load></script>
    <script src="/assets/vendor/simple-datatables/simple-datatables.js" client:load></script>
    
    <script src="/assets/vendor/tinymce/tinymce.min.js" client:load></script>
    <script src="/assets/vendor/php-email-form/validate.js" client:load></script>
    <script src="/assets/js/main.js" client:load></script> 

    <script src="/assets/js/myjs.js" client:load></script> 
</body>
</html>